extends _layouts/primary

block title
  title Enterprise | BitPay

append vars
  -var tourSelected = 'Enterprise'
  -var pageSelected = 'Tour'

block content
  include _includes/tour-nav
  .section.background-cover(style="background-color: #0F2962; background-image: url('/images/star_background.jpg');")
    .row
      .column.large-10.large-offset-1.text-center
        h1.white.text-shadow.fade-in-up An enterprise plan for bitcoin payments.
        h4.white.subheader.medium-8.medium-offset-2.text-shadow.fade-in-up.delay-1 Get access to the most powerful Bitcoin infrastructure on the planet.
        .row.fade-in-up.delay-1
          .column.medium-8.medium-offset-2.text-center
            a(href="mailto:sales@bitpay.com").white.btn.btn-blue-solid.uppercase.bold.btn-margin.arrow Contact Us

  .padding-vertical-less.bg-gray.border-bottom-gray
    .row.padding-less.text-center
      h5.uppercase.gray-dark Trusted By
      mixin logos(name, width, height)
        .home-logo.h2.unselectable(style="background-image: url('/images/color_logos/#{name}.png'); width: #{width}em; height: #{height}em; margin-right: 1.5em")
      +logos("gyft", 2, 2.5)
      +logos("microsoft", 3.5, 2.5)
      +logos("newegg", 2.5, 2.5)
      +logos("tigerdirect", 3.5, 2.5)
      +logos("virgin", 1.5, 2.5)

  .section.border-bottom-gray.bg-white
      .row
        .column.large-5.margin-bottom-less
          h3.header--bottom-border-left Engineering firepower.
          p.lead Our enterprise engineering services team can create the tools you need to seamlessly integrate bitcoin payments.
          p We build powerful, resilient infrastructure that grows with our clients.
        .column.large-7
          .row
            .column.medium-2
              .quote-anim.medium-float-right.margin-bottom-less
            .column.medium-10
              p.lead.quote.fade-in-up.delay-1 BitPay has consistently impressed us with its service and engineering. We are excited to see where bitcoin is headed, and we are confident that we are working with the best company to carry this technology forward at Microsoft.
              .row.fade-in-up.delay-2
                .column.xlarge-7
                  p.margin-bottom-none.bold Sam Anson
                  p.uppercase.small.margin-bottom-none Senior Business Ops Project Manager,
                  p.uppercase.small.margin-bottom-none Universal Store Business Operations
                .column.xlarge-5
                  .h2.background-contain.unselectable(style="background-image: url('/images/color_logos/microsoft.png'); width: 4.5em; height: 2.5em;)")

  .section.border-bottom-gray.bg-white
      .row
        .column.large-7.margin-vertical-more.large-margin-vertical-none
          .h1.background-contain.unselectable(style="background-image: url('/images/countries.png'); width: 100%; height: 8em;)")
        .column.large-5
          h3.header--bottom-border-left Global banking and settlement.
          p.lead Receive bank transfers to all available countries.
          p We're constantly expanding our financial network to support global enterprises.
          p
            a(href="/docs/settlement").arrow-blue Settlement details

  .section.bg-white
      .row
        .column.large-5.margin-bottom-less
          h3.header--bottom-border-left World-class support, on-demand.
          p.lead Our enterprise account managers are experienced and dedicated to making your bitcoin integration a success.
          p We'll provide the monitoring and direct assistance needed to keep things running smoothly.
        .column.large-7
          .row
            .column.medium-2
              .quote-anim.medium-float-right.margin-bottom-less
            .column.medium-10
              p.lead.quote.fade-in-up.delay-1 BitPay has been an instrumental partner, helping NETELLER to tap into the Bitcoin market in a secure and convenient way. They have been extremely responsive from day 1, accommodating our business needs every step of the way.
              .row.fade-in-up.delay-2
                .column.xlarge-5
                  p.margin-bottom-none.bold Clovis Cuqui
                  p.uppercase.small.margin-bottom-less Vice-President, Product
                .column.xlarge-7
                  .h2.background-contain.unselectable(style="background-image: url('/images/color_logos/neteller.svg'); width: 4.5em; height: 1.25em;)")


  .section.bg-lightblue-gradient.border-top-gray
    .row
      .column.medium-8.medium-offset-2
        h2.text-center.white Go enterprise.
        h4.text-center.white
    .row
      .column.medium-8.medium-offset-2.text-center
        a(href="mailto:sales@bitpay.com").white.btn.btn-blue-solid.uppercase.bold.btn-margin.arrow Contact Us
