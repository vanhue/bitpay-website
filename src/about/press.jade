extends ../_layouts/primary

block title
  title Press | BitPay
  
<script type="application/ld+json">
{
  "@context" : "http://schema.org",
  "@type" : "Organization",
  "name" : "BitPay",
  "url" : "https://bitpay.com/",
  "logo" : "https://bitpay.com/images/bitpay-logo-primary.e8382bb8.png",
  "sameAs" : [
    "http://www.facebook.com/BitPayOfficial",
    "http://www.twitter.com/BitPay",
    "http://plus.google.com/b/103321420256995341273/+BitPay1/posts",
    "http://www.linkedin.com/company/bitpay-inc-?",
    "http://www.youtube.com/user/BitPayVideos",
    "http://angel.co/bitpay"
  ]
}
</script>

block content
  .row.margin-bottom-less
    .column.medium-3
      h1.small-only-text-center Press
    .column.medium-9.text-center
      a(href="/bitpay-press-kit12082015.zip" download).white.btn.btn-blue-solid.uppercase.bold.large-float-right Download Press Kit
      
      
  .bg-gray-gradient.border-vertical-gray.padding-vertical-more
    .row
      .column.large-8
        h3.header--bottom-border-left Recent Coverage
        mixin featured-article(title, date, publication, url)
          p.lead.margin-bottom-none
            a(href="#{url}" target="_blank") #{title}
          p.margin-bottom-less #{date} - #{publication}
        +featured-article("Why Latin American Economies Are Turning to Bitcoin", "03.17.16", "TechCrunch", "http://techcrunch.com/2016/03/16/why-latin-american-economies-are-turning-to-bitcoin/")
        +featured-article("B2B Bitcoin Payments on the Rise", "03.08.16", "CoinTelegraph", "http://cointelegraph.com/news/b2b-bitcoin-payments-on-the-rise")
        +featured-article("Bitcoin's Emerging Growth Story: Gamers", "02.22.16", "Bitcoin Magazine", "https://bitcoinmagazine.com/articles/bitcoin-s-emerging-growth-story-gamers-1456161270")
        +featured-article("Wargaming’s Multiplayer Enthusiasts Can Now Buy Virtual Gold with Bitcoin", "02.10.16", "Payment Week", "http://paymentweek.com/2016-2-10-wargamings-multiplayer-enthusiasts-can-now-buy-virtual-gold-with-bitcoin-9616/")
        +featured-article("Ypsilon Partners With BitPay, Providing Bitcoin Payments to Over 80,000 Travel Sites", "01.19.16", "Brave New Coin", "http://bravenewcoin.com/news/ypsilon-partners-with-bitpay-providing-bitcoin-payments-to-over-80000-travel-sites/")
      .column.large-4.margin-top-less
        mixin press-social(title, url, icon)
          li.margin-bottom-less
            a(href="#{url}" target="_blank" class="inline-icon #{icon}") #{title}
        ul.no-bullet
          +press-social("BitPay Blog", "https://blog.bitpay.com", "blog")
          +press-social("BitPay on Twitter", "https://www.twitter.com/bitpay", "twitter")
          +press-social("BitPay on LinkedIn", "https://www.linkedin.com/company/bitpay-inc-", "linkedin")
          +press-social("BitPay on Facebook", "https://www.facebook.com/BitPayOfficial", "facebook")
    .row.text-center.padding-top-less
      hr
      h5.uppercase.gray-dark.text-center.margin-top Featured On
      mixin logos(name, width, height)
        .home-logo.h2.opacity.unselectable(style="background-image: url('/images/publication_logos/#{name}.svg'); width: #{width}em; height: #{height}em;")
      +logos("new_york_times", 6, 2)
      +logos("wired", 5, 2)
      +logos("wall_street_journal", 7, 2)
      +logos("techcrunch", 6, 2)
      +logos("forbes", 4, 2)
      
  .section
    .row.margin-bottom
      .column.large-6
        h3.header--bottom-border-left Logo
        .row
          .column.medium-6
            .bg-blue.radius.text-center.padding-vertical-less
              img(src="/images/bitpay-logo-primary.png" alt="BitPay Primary Logo" style="width: 80%;")
            ul.inline-list
              li <a href="/images/bitpay-logo-primary.png" download>PNG</a>
              li <a href="/images/bitpay-logo-primary.eps" download>EPS</a>
          .column.medium-6
            .bg-white.radius.text-center.padding-vertical-less.border-gray
              img(src="/images/bitpay-logo-inverse.png" alt="BitPay Secondary Logo" style="width: 80%;")
            ul.inline-list
              li <a href="/images/bitpay-logo-inverse.png" download>PNG</a>
              li <a href="/images/bitpay-logo-inverse.eps" download>EPS</a>

        hr
        p.lead Our logo is a wordmark derived from the Ubuntu font &mdash; the first typeface associated with bitcoin.
        p We prefer you use the white logo on a blue (or dark) background whenever possible, followed by the blue logo on a white (or light) background.
        p Please be sure to include adequate spacing around the logo and resist the temptation to embellish the logo with any additional effects, treatments, or colors.
        
      .column.large-6
        h3.header--bottom-border-left Capitalization
        .row
          .column.medium-4
            p.uppercase.bold Correct
          .column.medium-8
            p.checkmark BitPay
        .row
          .column.medium-4
            p.uppercase.bold Please avoid
          .column.medium-8
            .row
              .column.xlarge-6
                p.incorrect.margin-bottom-less Bitpay
                p.incorrect.margin-bottom-less bitPay
                
              .column.xlarge-6
                p.incorrect.margin-bottom-less bit-pay
                p.incorrect.margin-bottom-less bit pay
    
        .row
          .column
            hr
            p.lead BitPay is written with the “B” and “P” capitalized to distinguish BitPay (our company) from bitcoin (the currency).
    
  .section.bg-lightblue-gradient.border-top-gray
    .row
      .column.medium-8.medium-offset-2
        h2.text-center.white Need more? We're happy to help.
        
    .row
      .column.medium-8.medium-offset-2.text-center
        a(href="/bitpay-press-kit12082015.zip" download).white.btn.btn-margin.btn-blue-solid.uppercase.bold Download Press Kit
        a(href="mailto:media@bitpay.com").white.btn.btn-blue-border.btn-margin.uppercase.bold Email Us
