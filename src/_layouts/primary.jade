include ../_mixins/jademin

-var bodyClass = '';
block vars
  //- TODO

block pagevars

doctype html
html(lang='en' ng-csp)
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1')

    block title
      title BitPay

    block meta
      meta(name='description' content='Bitcoin payments, deposited to your bank account. Offer your customers the world’s fastest and safest payment option.')

      // Twitter Card data
      meta(name='twitter:card' content='summary')
      meta(name='twitter:site' content='@BitPay')
      meta(name='twitter:title' content='BitPay – Accept Bitcoin')
      meta(name='twitter:description' content='Bitcoin payments, deposited to your bank account. Offer your customers the world’s fastest and safest payment option.')
      meta(name='twitter:image' content='/images/social/bitpay-avatar-1200.jpg')

      // Open Graph data (Facebook and Reddit)
      meta(property='og:title' content='BitPay – Accept Bitcoin')
      meta(property='og:type' content='article')
      meta(property='og:url' content='https://bitpay.com/')
      meta(property='og:image' content='/images/social/bitpay-avatar-1200.jpg')
      meta(property='og:description' content='Bitcoin payments, deposited to your bank account. Offer your customers the world’s fastest and safest payment option.')
      meta(property='og:site_name' content='BitPay')

    // Add to homescreen for Chrome on Android
    meta(name='mobile-web-app-capable' content='yes')
    link(rel='icon' sizes='192x192' href='/images/touch/android-chrome-192x192.png')

    // Add to homescreen for Safari on iOS
    meta(name='apple-mobile-web-app-capable' content='yes')
    meta(name='apple-mobile-web-app-status-bar-style' content='black')
    meta(name='apple-mobile-web-app-title' content='BitPay Website')
    link(rel='apple-touch-icon' sizes='152x152' href='/images/touch/apple-touch-icon-152x152.png')
    link(rel='apple-touch-icon' sizes='180x180' href='/images/touch/apple-touch-icon-180x180.png')

    // Tile icon for Win8 (144x144 + tile color)
    meta(name='msapplication-TileImage' content='/images/touch/ms-touch-icon-144x144-precomposed.png')
    meta(name='msapplication-TileColor' content='#1D3E92')

    // Favicon
    link(rel="shortcut icon" href="/favicon.ico")

    link(rel='stylesheet' href='/styles/main.css' data-instant-track)
    link(rel='stylesheet' type='text/css' href='//fonts.googleapis.com/css?family=Karla:400,400italic,700')
    +jademin('/scripts/analytics.min.js')
      script(src='/_scripts/analytics.js')

  body
    .off-canvas-wrap.container(class='#{bodyClass}' data-offcanvas)
      .inner-wrap
        block header
          include ../_includes/header

        block content

        block footer
          include ../_includes/footer

        a.exit-off-canvas

    block scripts
      +jademin('/scripts/main.min.js')
        script(src='/jquery/dist/jquery.js')
        script(src='/foundation/js/foundation/foundation.js')
        script(src='/foundation/js/foundation/foundation.magellan.js')
        script(src='/foundation/js/foundation/foundation.offcanvas.js')
        script(src='/foundation/js/foundation/foundation.accordion.js')
        script(src='/instantclick/instantclick.js')
        script(src='/_scripts/init.js')
        script(src='/angular/angular.js')
        script(src='/flash-cookies/dist/swfstore.min.js')
        script(src='/_scripts/referralTracker.js')
      script(type="application/ld+json" src="/knowledge-graph.json")
